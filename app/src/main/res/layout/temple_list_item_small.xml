<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="155dp"
    android:layout_marginBottom="@dimen/home_category_margin_bottom"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_marginStart="@dimen/margin_start"
        android:layout_width="match_parent"
        app:layout_constraintDimensionRatio="4:3"
        android:elevation="@dimen/elevation"
        android:layout_marginEnd="@dimen/margin_end"
        android:layout_height="0dp"
        app:cardCornerRadius="@dimen/corner_radius"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/ivTempleSmall"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/home_category_temple_name_start"
            android:layout_marginEnd="@dimen/home_category_temple_name_start"
            android:layout_marginTop="@dimen/home_category_temple_name_start"
            android:layout_marginBottom="@dimen/home_category_temple_name_start"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp"
            tools:srcCompat="@tools:sample/avatars" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvTempleSmall"
        android:layout_width="0dp"
        android:layout_marginStart="@dimen/margin_start"
        android:layout_marginEnd="@dimen/margin_end"
        android:layout_marginTop="@dimen/home_category_name_top"
        android:layout_marginBottom="@dimen/home_category_name_top"
        android:maxLines="2"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />


</androidx.constraintlayout.widget.ConstraintLayout>