<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.homefragment.HomeFragment">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBarHome"
        android:elevation="13dp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#FFFEFE"
        app:menu="@menu/menu_home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_marginStart="15dp"
            android:layout_width="55dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/logo">
            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="5dp"
            android:layout_width="125dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/temple_links">
            </ImageView>
        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>


    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:id="@+id/refreshLayout"
        android:layout_below="@id/toolBarHome"
        android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolBarHome">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvGods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="5dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:listitem="@layout/gods_list_item" />

            <include
                android:id="@+id/bannerLarge"
                layout="@layout/banner_slider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rvGods"
                android:layout_marginStart="9dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="9dp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="190dp">
            </include>

                <ImageView
                    android:id="@+id/bannerSmall"
                    android:layout_width="match_parent"
                    android:layout_below="@id/bannerLarge"
                    android:layout_marginTop="11dp"
                    app:layout_constraintDimensionRatio="2:1"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_height="85dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/banner2"
                    app:layout_constraintTop_toBottomOf="@+id/bannerLarge"
                    tools:layout_editor_absoluteX="0dp">
                </ImageView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvTempleCategory"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/bannerSmall"
                android:padding="10dp"
                tools:listitem="@layout/temple_main_list_item">
            </androidx.recyclerview.widget.RecyclerView>

        </RelativeLayout>

    </ScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</RelativeLayout>